
<% if action_name == "search" %>
<h1 class="page-heading">Hairdressers in <%= params[:search][:city] %></h1>
<% end %>


<div class="container">
  <div class="row">

   <% @hairdressers.each do |hairdresser| %>

   <div class="col-xs-12 col-sm-4">

     <div class="card">

      <div class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://unsplash.it/200/300');">

        <%= link_to(hairdresser) do %>
        <%= cl_image_tag hairdresser.photo.path, width: 400, height: 300, crop: :fit, class: "card-user" %>
        <div class="card-hover">
         <div class="card-hairdresser">
          <h2>
            <%= hairdresser.user.first_name + " " +
            hairdresser.user.last_name
            %></h2>
          </div>
          <div class="card-description">
            <p>
              <br><b>Location:</b></br> <%= hairdresser.location %>
            </p>
            <p>
              <br><b>Description:</b></br> <%= hairdresser.description %>
            </p>
          </div>
        </div>
      </div>
      <div class="card-hairdresser">
        <h2><%= hairdresser.user.first_name + " " +
          hairdresser.user.last_name
          %>
        </h2>
      </div>
    </div>

  </div>

  <% end %>
    <% end %>

</div>
</div>
