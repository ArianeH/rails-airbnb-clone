        <%= link_to(hairdresser) do %>
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/tgenaitay", class: "card-user"%>
        <div class="card-hover">
         <div class="card-hairdresser">
          <h2>
            <%= hairdresser.user.first_name + " " +
            hairdresser.user.last_name
            %></h2>
          </div>
          <div class="card-description">
            <p>
              Opening hours: ....
            </p>
            <p>
              Specialty: ....
            </p>
          </div>
        </div>
      </div>
      <div class="card-hairdresser">
        <h2><%= hairdresser.user.first_name + " " +
          hairdresser.user.last_name
          %>
        </h2>
      </div>
    </div>

  </div>

  <% end %>
